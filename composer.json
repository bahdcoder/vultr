{
    "name": "bahdcoder/vultr",
    "description": "A simple PHP wrapper around vultr API",
    "keywords": [
        "bahdcoder",
        "vultr"
    ],
    "homepage": "https://github.com/bahdcoder/vultr",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Kati Frantz",
            "email": "bahdcoder@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Bahdcoder\\Vultr\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bahdcoder\\Vultr\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
